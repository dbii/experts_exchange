<h1><%= @expert.name %></h1>
<div><%= link_to @expert.url, @expert.url %></div>
<% if @expert.short_url %>
<div><%= link_to @expert.short_url, @expert.short_url %></div>
<% end %>
<h2>Topics</h2>
<div>
  <% @expert.topics.each do |topic| %>
    <div><%= topic.content %></div>
  <% end %>
</div>
<h2>Friends</h2>
<% if current_user %>
  <%= link_to "Edit Friends", friends_expert_path(@expert) %>
<% end %>
<% @expert.friends.each do |friend| %>
  <div><%= link_to friend.name, expert_path(friend) %></div>
<% end %>
