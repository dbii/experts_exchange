<div class="row">
  <div class="col-md-12">
    <h1><%= @expert.name %></h1>
    <%= link_to @expert.url, @expert.url %>
      <% if @expert.short_url %>
        <div><%= link_to @expert.short_url, @expert.short_url %></div>
      <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h2>Topics</h2>
    <% @expert.topics.each do |topic| %>
      <div><%= topic.content %></div>
    <% end %>
  </div>

  <div class="col-md-6">
    <div class="float-right">
      <% if current_user %>
        <%= link_to "Edit Friends", friends_expert_path(@expert), class: "btn btn-primary" %>
      <% end %>
    </div>
    <h2>Friends</h2>

    <% @expert.friends.each do |friend| %>
      <div><%= link_to friend.name, expert_path(friend) %></div>
    <% end %>
  </div>
</div>
